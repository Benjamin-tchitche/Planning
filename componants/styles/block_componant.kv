<RepeteBlock>
    orientation: 'vertical'
    adaptive_height: True
    spacing: 10
    MDBoxLayout:
        adaptive_height: True
        spacing: 5
        MDBoxLayout:
            size_hint_x: None
            width: dp(30)
            MDIcon:
                icon: 'reload'
                font_size: 20
                pos_hint: {'center_x': 0.5,'center_y': 0.5}

        CustomeDropOptions:
            id: repeter_status
            on_text: root.check_reload(self)
        
    MDBoxLayout:
        id: dynamic_inputer
        adaptive_height: True
    
    MDBoxLayout:
        adaptive_height: True
        spacing: 5
        MDBoxLayout:
            size_hint_x: None
            width: dp(30)
        
        CustomeDropOptions:
            id: repeter_limit
            htext: "Limite"
            text: "Sans limite"
            options: ["Sans limite","Jusqu'Ã  une certaine date"]
        